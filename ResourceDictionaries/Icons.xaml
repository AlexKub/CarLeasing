<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CarLeasingViewer"
                    xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <Style x:Key="BaseCarIconStyle" TargetType="Image">
        <Setter Property="Height" Value="16"/>
        <Setter Property="Margin" Value="3 0 3 0"/>
    </Style>
    <Style x:Key="Maintance" TargetType="Image" BasedOn="{StaticResource BaseCarIconStyle}">
        <Setter Property="Source" Value="{x:Static local:IconsInfo.MaintenanceIconPath}"/>
    </Style>
    <Style x:Key="Insurance" TargetType="Image" BasedOn="{StaticResource BaseCarIconStyle}">
        <Setter Property="Source" Value="{x:Static local:IconsInfo.InsuranceIconPath}"/>
        
    </Style>
    <Style x:Key="NotAccounting" TargetType="Image" BasedOn="{StaticResource BaseCarIconStyle}">
        <Setter Property="Source" Value="{x:Static local:IconsInfo.NotAccounting}"/>
    </Style>
</ResourceDictionary>