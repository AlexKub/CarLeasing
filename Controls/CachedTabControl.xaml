                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <controls:MonthBusinessGrid Margin="0 0 5 10" MaxHeight="500" 
                                                                        NameSearchText="{Binding ElementName=test, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>

